# Allow skipping pre-push checks with --no-verify or SKIP_PREPUSH=true
if [ "$SKIP_PREPUSH" = "true" ]; then
  echo "â­ï¸  Skipping pre-push checks (SKIP_PREPUSH=true)"
  exit 0
fi

echo "ğŸ” Running pre-push checks..."
echo "ğŸ’¡ To skip these checks, use: git push --no-verify"

# Flag to track overall success
OVERALL_STATUS=0

# Run TypeScript check
echo "ğŸ”§ Checking TypeScript..."
pnpm run type-check
TS_STATUS=$?
if [ $TS_STATUS -ne 0 ]; then
  echo "âš ï¸  TypeScript check found issues - review before pushing"
  OVERALL_STATUS=1
fi

# Run linting (check only)
echo "ğŸ§¹ Running linter (check only)..."
pnpm run lint
LINT_STATUS=$?
if [ $LINT_STATUS -ne 0 ]; then
  echo "âš ï¸  Linter found issues - consider running 'pnpm lint:fix'"
  OVERALL_STATUS=1
fi

# Run tests (skip slow E2E tests, just run basic unit tests)
echo "ğŸ§ª Running unit tests..."
pnpm run test:unit --run --reporter=basic
TEST_STATUS=$?
if [ $TEST_STATUS -ne 0 ]; then
  echo "âš ï¸  Unit tests found issues - review before pushing"
  echo "ğŸ’¡ Run 'pnpm test:unit' to see detailed results"
  OVERALL_STATUS=1
fi

# Final status check
if [ $OVERALL_STATUS -ne 0 ]; then
  echo "âš ï¸  Some checks found issues, but tests passed. Consider fixing before pushing."
  echo "ğŸ’¡ Run 'pnpm lint:fix' to auto-fix linting issues"
  echo "ğŸ’¡ Run 'pnpm type-check' to see TypeScript errors"
  
  # Allow push to continue with warnings (comment out next line to block on any issues)
  # exit 1
fi

echo "âœ… All critical checks passed!"