# Allow skipping pre-push checks with --no-verify or SKIP_PREPUSH=true
if [ "$SKIP_PREPUSH" = "true" ]; then
  echo "⏭️  Skipping pre-push checks (SKIP_PREPUSH=true)"
  exit 0
fi

echo "🔍 Pre-push: Fast validation..."
echo "💡 Skipping checks for speed. Use: git push --no-verify to skip entirely"
echo "💡 Remember to run 'bun run type-check' and 'bun test:unit' before merging"
echo "✅ Pre-push validation complete!"