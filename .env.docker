# ==========================================
# Docker Environment Variables
# Production-ready configuration
# ==========================================

HOSTNAME=0.0.0.0
NEXT_TELEMETRY_DISABLED=1
# Node.js Environment
NODE_ENV=production
PORT=3000

# Security
AUTH_SECRET=your-production-auth-secret-here-minimum-32-chars

# Database Configuration (Railway PostgreSQL Compatible)
# Use internal Docker network hostnames
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/roborail_prod
POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/roborail_prod

# Individual PostgreSQL connection components (Railway format)
PGHOST=postgres
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your-secure-postgres-password
PGDATABASE=roborail_prod

# Legacy Docker Compose variables (for backward compatibility)
POSTGRES_DB=roborail_prod
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_USER=postgres

# Smart-Spawn Database Configuration (Railway optimization)
SMART_SPAWN_DB_MAX_CONNECTIONS=10
SMART_SPAWN_DB_CONNECTION_TIMEOUT=20000
SMART_SPAWN_DB_RETRY_ATTEMPTS=3
SMART_SPAWN_DB_RETRY_DELAY=2000
SMART_SPAWN_FALLBACK_MODE=graceful
SMART_SPAWN_TEST_MODE=false

REDIS_PASSWORD=your-secure-redis-password
# Redis Configuration
REDIS_URL=redis://redis:6379

ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-key
# External Services (Configure with your actual keys)
OPENAI_API_KEY=your-openai-api-key

# Blob Storage
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

LANGCHAIN_API_KEY=your-langsmith-key
LANGCHAIN_PROJECT=roborail-production
# Observability (Optional)
LANGCHAIN_TRACING_V2=false

NEXTAUTH_SECRET=your-nextauth-secret
# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000

# Agent Configuration
AGENT_TIMEOUT=300000
DEBUG=false

# Performance Settings
# Disable source maps in production for security
GENERATE_SOURCEMAP=false

# Memory Limits
NODE_OPTIONS=--max-old-space-size=4096

LOG_FORMAT=json
# Logging
LOG_LEVEL=info

HEALTH_CHECK_INTERVAL=60000
# Health Check Settings
HEALTH_CHECK_TIMEOUT=30000

# ==========================================
# SECURITY NOTES:
# ==========================================
# 1. Change all default passwords before production use
# 2. Use strong, unique secrets for AUTH_SECRET and NEXTAUTH_SECRET
# 3. Store sensitive values in Docker secrets or external secret management
# 4. Never commit this file with real credentials to version control
# 5. Use environment-specific .env files (.env.staging, .env.production)
# ==========================================
