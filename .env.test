# Test Environment Configuration
# Optimized for fast test execution and reliability

# Core settings
NODE_ENV=test
PLAYWRIGHT=true
NEXT_TELEMETRY_DISABLED=1
TURBO_CI=1

# Reduce verbosity and improve performance
LOG_LEVEL=error
DISABLE_TELEMETRY=true

# Fast development settings
FAST_REFRESH=false
WEBPACK_WATCH=false

# Test timeouts (in milliseconds)
PLAYWRIGHT_TIMEOUT=75000
API_TIMEOUT=30000
DB_TIMEOUT=10000

# Memory optimizations
NODE_OPTIONS="--max-old-space-size=4096 --optimize-for-size"

# API keys for testing (use test values by default)
OPENAI_API_KEY=sk-test-openai-key
ANTHROPIC_API_KEY=test-anthropic-key
GOOGLE_GENERATIVE_AI_API_KEY=test-google-key
COHERE_API_KEY=test-cohere-key
GROQ_API_KEY=test-groq-key
XAI_API_KEY=test-xai-key

# Database URLs (test environment)
POSTGRES_URL=postgresql://test:test@localhost:5432/test
NEON_DATABASE_URL=postgresql://test:test@localhost:5432/test

# Auth and storage
AUTH_SECRET=test-auth-secret-for-testing
BLOB_READ_WRITE_TOKEN=test-blob-token

# Redis (optional for tests)
REDIS_URL=redis://localhost:6379

# Observability (disabled for faster tests)
LANGCHAIN_API_KEY=test-langchain-key
LANGCHAIN_PROJECT=test-project
LANGCHAIN_TRACING_V2=false

# Browser testing optimizations
BROWSERBASE_API_KEY=test-browserbase-key-for-local-testing
BROWSERBASE_PROJECT_ID=test-project-id